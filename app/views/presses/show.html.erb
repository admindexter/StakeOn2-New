<% title "#{@title}" %>

    <span id="right_content">

      <div id="form_content">

        <div id="form_content_header">

          <span id="form_content_header_press_news">
          <!-- end #form_content_header_press_news --></span>

          <span id="form_content_header_body">
          <!-- end #form_content_header_body --></span>

          <span id="form_content_header_right">
          <!-- end #form_content_header_right --></span>

        <!-- end #form_content_header --></div>

        <div id="form_content_body">

          <div id="form_content_text">

            <div id="content_body">

              <p></p>

              <h4><%=h @press.title %></h4>

              <div id="news_article_photo">
                <div class="last_photo">
                  <%= image_tag @press.photo.url(:preview) %>
                </div>

                <div id="news_article_photo_tag">
                  <b><%=h @press.location %></b><br />
                  <%=h @press.emphasis %><br /><br />
                  <%=h @press.date_of_event %><br /><br />
                  <%=h @press.author %><br /><br />
                </div>
              </div>

              <%= @press.information %>

              <p class="return_link">
                <% if admin? %>
                  <span><%= link_to 'Edit', edit_press_path(@press) %></span>
                  <span> | </span>
                  <span><%= link_to "Destroy", @press, :confirm => 'Are you sure?', :method => :delete %></span>
                  <span> | </span>
                <% end %>

                <span><%= link_to 'View All', presses_path %></span>
              </p>

            <!-- end #content_body --></div>


          <!-- end #form_content_text --></div>

