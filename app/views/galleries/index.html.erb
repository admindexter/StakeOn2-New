<% title "#{@title}" %>

    <span id="right_content">

      <div id="form_content">

        <div id="form_content_header">

          <span id="form_content_header_gallery">
          <!-- end #form_content_header_gallery --></span>

          <span id="form_content_header_body">
          <!-- end #form_content_header_body --></span>

          <span id="form_content_header_right">
          <!-- end #form_content_header_right --></span>

        <!-- end #form_content_header --></div>

        <div id="form_content_body">

          <div id="form_content_text">

            <div id="content_body">

              <p></p>

              <% for gallery in @galleries %>

                <span class="pic_pt">
                  <div class="pic_pt_image_holder">
                    <%= link_to image_tag(gallery.photo.url(:thumbnail)), gallery %>
                  </div>

                  <div class="pic_pt_text_holder">
                    <%=h truncate(gallery.title.gsub(/<.*?>/,''), :length => 45) %>
                  </div>

                  <div class="pic_pt_button_holder">
                    <%= link_to image_tag("view_picture_button.jpg"), gallery %>
                  </div>
                </span>

                <span class="pic_pt_gap">
                </span>

              <% end %>

              <div class="pagination">
                <%= will_paginate @galleries %>
              </div>

              <% if admin? %>
                <p class="return_link">
                  <%= link_to 'New gallery', new_gallery_path %>
                </p>
              <% end %>

            <!-- end #content_body --></div>


          <!-- end #form_content_text --></div>

        <!-- end #form_content_body --></div>

