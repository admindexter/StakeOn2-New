<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <title><%= h(yield(:title) || "Untitled") %></title>
    <%= stylesheet_link_tag 'site' %>
    <%= stylesheet_link_tag "profile" %>
    <%= yield(:head) %>
  </head>

<body>


<div id="header_top">
  <div id="user_nav_holder">

    <span id="small_logo">
      <%= link_to image_tag("stakeon2_small_logo.jpg"), home_path %>
    <!-- end #small_logo --></span>

    <span id="small_logo_gap">
    <!-- end #small_logo_gap --></span>

    <%- if show_title? -%>
      <div id="header_title">
        <%=h yield(:title) %>

        <div id="user_nav">
          <span id="user_welcome">
            <% if @assigned %>
              Hi <%= @assigned.username %>,
            <% else %>
              Hi Guest,
            <% end %>
          <!-- end #user_welcome --></span>

          <% if current_user %>
            <%= link_to "Edit basic info", edit_user_path(:current) %> or
            <%= link_to "Logout", logout_path %>
          <% else %>
            <%= link_to "Sign Up As A StakeOn2 Member", new_user_path %> or
            <%= link_to "Login As A StakeOn2 Member", login_path %>
          <% end %>
        <!-- end #user_nav --></div>
      <!-- end #header_title --></div>
    <%- end -%>

  <!-- end #user_nav_holder --></div>

<!-- end #header_top --></div>

<div id="navigation">

  <div id="navigation_holder">

    <span class="button"><%= link_to_unless_current 'Home', home_path %>
    <!-- end .button --></span>

    <span class="button"><%= link_to_unless_current 'Market Rules', marketer_path %>
    <!-- end .button --></span>

    <span class="button"><%= link_to_unless_current 'Our Games', games_path %>
    <!-- end .button --></span>

    <span class="button"><%= link_to_unless_current 'FAQ', faq_path %>
    <!-- end .button --></span>

    <span class="button"><%= link_to_unless_current 'How To Play', front_path %>
    <!-- end .button --></span>

    <span class="button"><%= link_to_unless_current 'News', presses_path %>
    <!-- end .button --></span>

    <span class="button"><%= link_to_unless_current 'Gallery', galleries_path %>
    <!-- end .button --></span>

    <span class="button"><%= link_to_unless_current 'Contact', contact_path %>
    <!-- end .button --></span>

  <!-- end #navigation_holder --></div>

<!-- end #navigation --></div>

<div id="navigation_bottom">
<!-- end #navigation_bottom --></div>

<div id="content">

  <%- flash.each do |name, msg| -%>
    <%= content_tag :div, msg, :id => "flash_#{name}" %>
  <%- end -%>

  <div id="sidebar_right_content">

    <span id="sidebar">

          <div id="sidebar_header">
          <!-- end #sidebar_header --></div>

          <div id="sidebar_body">

            <div id="sidebar_body_head">

              <div id="sidebar_body_foot">

                <div id="sidebar_body_foot_content">

                  <% if @last_five_presses %>

                    <% for press in @last_five_presses %>

                      <div class="news_container_span2_news_div">

                        <div class="news_container_span2_news_div_content_div">

                          <div class="news_date"><%=h press.updated_at %>
                          <!-- end .news_date --></div>

                          <div class="news_header"><%=h truncate(press.title.gsub(/<.*?>/,''), :length => 70) %>
                          <!-- end .news_header --></div>

                          <div class="news_info">
                            <%=h truncate(press.information.gsub(/<.*?>/,''), :length => 270) %>
                          <!-- end .news_info --></div>

                          <div class="read_more_news"><%= link_to 'Read more', press %>
                          <!-- end .read_more_news --></div>

                        <!-- end .news_container_span2_news_div_content_div --></div>

                      <!-- end .news_container_span2_news_div --></div>

                    <% end %>

                  <% else %>

                  <% end %>

                <!-- end #sidebar_body_foot_content --></div>

              <!-- end #sidebar_body_foot --></div>

            <!-- end #sidebar_body_head --></div>

          <!-- end #sidebar_body --></div>

          <div id="sidebar_footer"><%= link_to image_tag( "news_button_normal.jpg", :mouseover => "/images/news_button_highlight.jpg" ), presses_path %>
          <!-- end #sidebar_footer --></div>

    <!-- end #sidebar --></span>

    <%= yield %>

        <div id="form_content_footer">

          <span id="form_content_footer_left">
          <!-- end #form_content_footer_left --></span>

          <span id="form_content_footer_body">
          <!-- end #form_content_footer_body --></span>

          <span id="form_content_footer_right">
          <!-- end #form_content_footer_right --></span>

        <!-- end #form_content_footer --></div>

      <!-- end #form_content --></div>

      <div id="info_content">

        <span id="info_content_left">
        <!-- end #info_content_left --></span>

        <span id="info_content_text">

          <div id="info_header_gap"></div>

          <div id="info_header"></div>

          <div id="info_text"><%= @opportunity.body %></div>

        <!-- end #info_content_text --></span>

        <span id="info_content_picture">
        <!-- end #info_content_picture --></span>

      <!-- end #info_content --></div>

    <!-- end #right_content --></span>

    <br clear="all" />

  <!-- end #sidebar_right_content --></div>

<!-- end #content --></div>

<div id="container_right_content_gap">
<!-- end #container_right_content_gap --></div>

<div id="container">

  <div id="container_holder">

    <span id="winners_div">

      <div id="winners_div_content">

        <br /><br />
        Coming soon...<br />
        Coming soon...<br />
        Coming soon...<br />
        Coming soon...<br />
        Coming soon...<br />
        Coming soon...<br />

      <!-- end #winners_div_content --></div>

      <div id="winners_div_button">

        <%= link_to image_tag( "footer_view_more_button_normal.jpg", :mouseover => "/images/footer_view_more_button_highlight.jpg" ), winner_path %>

      <!-- end #winners_div_button --></div>

    <!-- end #winners_div --></span>

    <span id="vendors_div">

      <div id="vendors_div_content">

        <br /><br />
        Coming soon...<br />
        Coming soon...<br />
        Coming soon...<br />
        Coming soon...<br />
        Coming soon...<br />
        Coming soon...<br />

      <!-- end #vendors_div_content --></div>

      <div id="vendors_div_button">

        <%= link_to image_tag( "footer_view_more_button_normal.jpg", :mouseover => "/images/footer_view_more_button_highlight.jpg" ), vendors_path %>

      <!-- end #vendors_div_button --></div>

    <!-- end #vendors_div --></span>

    <span id="blog_div">

      <div id="blog_div_content">

        <br /><br />
        Administrators<br />
        <div id="blog_div_content_text">
          This space will hold the last blog post made by any member of the StakeOn2 community.
          Registered members are free to come online and post information and gists that involves
          StakeOn2. Enjoy the services that StakeOn2 has to offer.
        <!-- end #blog_div_content_text --></div>

      <!-- end #blog_div_content --></div>

      <div id="blog_div_button">

        <%= link_to image_tag( "footer_view_more_button_normal.jpg", :mouseover => "/images/footer_view_more_button_highlight.jpg" ), blogs_path %>

      <!-- end #blog_div_button --></div>

    <!-- end #blog_div --></span>

  <!-- end #footer_holder --></div>

<!-- end #container --></div>

  <div id="footer">
  <!-- end #footer --></div>

</body>
</html>

