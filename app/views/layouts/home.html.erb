<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <title><%= h(yield(:title) || "Untitled") %></title>
    <%= stylesheet_link_tag 'index' %>
    <%= yield(:head) %>
  </head>

<body>

<div id="header_top">
  <div id="user_nav_holder">

    <span id="small_logo">
      <%= link_to image_tag("stakeon2_small_logo.jpg"), home_path %>
    <!-- end #small_logo --></span>

    <span id="small_logo_gap">
    <!-- end #small_logo_gap --></span>

    <%- if show_title? -%>
      <div id="header_title">
        <%=h yield(:title) %>

        <div id="user_nav">
          <span id="user_welcome">
            <% if @assigned %>
              Hi <%= @assigned.username %>,
            <% else %>
              Hi Guest,
            <% end %>
          <!-- end #user_welcome --></span>

          <% if current_user %>
            <%= link_to "Edit basic info", edit_user_path(:current) %> or
            <%= link_to "Logout", logout_path %>
          <% else %>
            <%= link_to "Sign Up As A StakeOn2 Marketer", new_user_path %> or
            <%= link_to "Login As A StakeOn2 Marketer", login_path %>
          <% end %>
        <!-- end #user_nav --></div>
      <!-- end #header_title --></div>
    <%- end -%>

  <!-- end #user_nav_holder --></div>

<!-- end #header_top --></div>

